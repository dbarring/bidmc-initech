<h2>Your CTAs</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Pi</th>
    <th>Workflow status</th>
  </tr>

<% @related_ctas.each do |cta| %>
  <tr>
    <td><%= link_to cta.name, cta%></td>
    <td><%= User.find(cta.pi_id).full_name %></td>
    <td><%= cta.workflow_status %></td>
  </tr>
<% end %>
</table>

<h2>All CTAs</h2>

<%= form_tag({action: 'search'})%>
  <%= text_field :search, '', :placeholder => 'Enter search term...' %>
  <%= submit_tag 'Search'%>

<table>
  <tr>
    <th>Name</th>
    <th>Pi</th>
    <th>Workflow status</th>
  </tr>

<% @ctas.each do |cta| %>
  <tr>
    <td><%= link_to cta.name, cta%></td>
    <td><%= User.find(cta.pi_id).full_name %></td>
    <td><%= cta.workflow_status %></td>
  </tr>
<% end %>
</table>

