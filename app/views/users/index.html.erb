<h1>Admin Control Panel</h1>

<h2 class=inline>Users &nbsp;&nbsp;&nbsp;&nbsp;</h2>

<%= form_tag({action: 'search'}, class: 'inline')%>
  <%= text_field :search, '', :placeholder => 'Enter search term...' %>
  <%= submit_tag 'Search'%>
<br><br>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.full_name, user %></td>
    <td><%= user.email %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %> <br>