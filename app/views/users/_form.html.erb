<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <%if (current_user.id == @user.id)%>
    <div class="field">
      <%= f.label "Change Password" %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label "Current Password" %><br />
      <%= password_field_tag :curr_password, '' %>
    </div>
  <%end%>
  <%= "Current permissions: " %>
  <%- @current_permissions = @user.user_groups.all.uniq%>
  <%if (@current_permissions != nil) %>
    <table>
      <tr>
        <th><h4>Name</h4></th>
        <th><h4>Remove</h4></th>
      </tr>
      <%@current_permissions.each do |p| %>
        <tr>
          <th><%=p.name%>
          <th> </th>
        </tr>
      <%end %>
    </table>
  <%else%>
    None
  <%end%>
  <br>
  <%- @permissions = UserGroup.find_all_by_group_type(1)%>
  <%= "Add permissions: " %>
  <%= select_tag :permissions, options_for_select(@permissions.collect{ |p| [p.name, p.id] }), :multiple => true %>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
