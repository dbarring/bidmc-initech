<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <br>
  <% @permissions = UserGroup.find_all_by_group_type(1)%>
  <%= "Add permissions: " %>
  <%= select_tag :permissions, options_for_select(@permissions.collect{ |p| [p.name, p.id]}, selected: @user.get_permissions.collect{|j| j.id}), :multiple => true %>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
